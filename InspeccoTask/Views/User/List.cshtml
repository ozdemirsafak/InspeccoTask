@using EntityLayer.Concrete
@model List<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Ad Soyad</th>
            <th scope="col">Email</th>
            <th scope="col">Rol</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Username</td>
                <td>@item.UserRole.RoleName</td>
                <td>@item.Email</td>
                @if (item.UserRoleId == 3 || item.UserRoleId == 4)
                {
                    <td><a href="/user/update/@item.Id">Güncelle</a></td>
                }  
            </tr>
        }
        
    </tbody>
</table>

